kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4
nodes:
  - role: control-plane
    kubeadmConfigPatches:
      - |
        kind: InitConfiguration
        nodeRegistration:
          kubeletExtraArgs:
            node-labels: "ingress-ready=true"
        kind: ClusterConfiguration
        apiServer:
          extraArgs:
            oidc-issuer-url: "https://shasame.test/dex"
            oidc-client-id: "oauth2-client-id"
            oidc-username-claim: "email"
            oidc-groups-claim: "groups"
          # oidc-ca-file: "/etc/kubernetes/pki/ca.crt"
    extraPortMappings:
      - containerPort: 80
        hostPort: 80
        protocol: TCP
      - containerPort: 443
        hostPort: 443
        protocol: TCP
      - containerPort: 30080
        hostPort: 30080
        protocol: TCP
      - containerPort: 30081
        hostPort: 30081
        protocol: TCP
      - containerPort: 30100
        hostPort: 30100
        protocol: TCP
      - containerPort: 30101
        hostPort: 30101
        protocol: TCP
      - containerPort: 30102
        hostPort: 30102
        protocol: TCP
  - role: worker
  - role: worker
networking:
    disableDefaultCNI: true
    podSubnet: 192.168.0.0/16
    serviceSubnet: "10.96.0.0/12"